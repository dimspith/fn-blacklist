{
    "name": "FakeNews Blocker",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Blocks possible Fake News sites based on a content-agnostic ML classifier.",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    
    "icons": { "16": "icons/fakenews16.png",
               "32": "icons/fakenews32.png",
               "48": "icons/fakenews48.png",
               "128": "icons/fakenews128.png"
             },

    "background": {
        "scripts": ["src/bg-scripts/background.js"],
        "persistent": true
    },

    "browser_action": {
 		"default_popup": "src/views/popup/popup.html",
 		"default_title": "Fake News Blocker"
 	}
}

